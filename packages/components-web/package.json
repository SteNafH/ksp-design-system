{
  "name": "@stenafh/ksp-components-web",
  "version": "0.0.0",
  "description": "Web Ui Component Library",
  "author": "Stefan Hilhorst",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SteNafH/ksp-design-system.git",
    "directory": "packages/ksp-components-web"
  },
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./coverage",
    "test:eslint": "eslint ./src ./tests",
    "test:types": "tsc",
    "test:build": "publint --strict",
    "build": "vite build"
  },
  "type": "module",
  "types": "dist/esm/index.d.ts",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@types/react": "^18.2.52",
    "@vitejs/plugin-react": "^4.3.3",
    "react": "^18.2.0",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "dependencies": {
    "@r2wc/react-to-web-component": "^2.0.3",
    "@stenafh/ksp-components-react": "workspace:*"
  }
}
